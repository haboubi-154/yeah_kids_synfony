{% extends 'dashbase.html.twig' %}

{% block content %}


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Publication</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <span>Titre de publication</span>

            {{ form_widget(form.titre,{'attr': {'id' : 'message' , 'name' : 'message' , 'placeholder' : 'Titre'}}) }}
            <br>
            <span>Description de publication</span>
            {{ form_widget(form.description,{'attr': {'id' : 'message' , 'name' : 'message' , 'placeholder' : 'Description'}}) }}
            <br>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}